<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivity"
    android:background="@drawable/bg_admin_dashboard">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/adminToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#424242"
        android:backgroundTint="#FFAF52"
        android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:title="ADMIN DASHBOARD"
        app:titleTextColor="@color/white" />

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="top|center_horizontal"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/adminToolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Section: Manage Users -->
        <TextView
            android:id="@+id/labelUsers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/manage_users_dash"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="8dp"/>

        <!-- Card 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_round_white"
            android:padding="16dp"
            android:elevation="6dp"
            android:clipToPadding="false"
            android:clipToOutline="true"
            android:orientation="horizontal"
            android:layout_marginBottom="18dp">

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/personicon"
                android:src="@drawable/ic_user_24"
                app:tint="#1E88E5" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <!-- USERS button -->
                <Button
                    android:id="@+id/usersActivityButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/activitymain_addmoviebutton_background"
                    android:text="@string/userspage"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:drawablePadding="8dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp" />

                <!-- USERS total -->
                <TextView
                    android:id="@+id/usersCountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:alpha="0.9"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Section: Manage Admins -->
        <TextView
            android:id="@+id/labelAdmins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/manage_admins"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="50dp"/>

        <!-- Card 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_round_white"
            android:padding="16dp"
            android:elevation="6dp"
            android:clipToPadding="false"
            android:clipToOutline="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/adminshieldicon"
                android:src="@drawable/ic_shield_24"
                app:tint="#1E88E5" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <!-- ADMINS button -->
                <Button
                    android:id="@+id/adminsActivityButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/activitymain_addmoviebutton_background"
                    android:text="@string/admins"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:drawablePadding="8dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp" />

                <!-- ADMINS total -->
                <TextView
                    android:id="@+id/adminsCountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:alpha="0.9"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
