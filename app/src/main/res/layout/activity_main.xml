<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/mainActivityToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="?attr/homeAsUpIndicator"
        android:background="#FF0000"
        app:title="MOVIE WATCHLIST"
        app:titleTextColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar" />

    <TextView
        android:id="@+id/addMoviesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_movies"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainActivityToolbar" />

    <EditText
        android:id="@+id/movieTitleInputEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="10dp"
        android:hint="@string/enter_title"
        android:autofillHints="Enter a title"
        android:inputType="text"
        android:background="#D9D9D9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addMoviesTextView" />

    <EditText
        android:id="@+id/movieGenreInputEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:hint="@string/enter_genre"
        android:autofillHints="Enter a gene"
        android:background="#D9D9D9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/movieTitleInputEditText" />

    <Button
        android:id="@+id/addMovieButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_movie"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:background="@drawable/activitymain_addmoviebutton_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/movieGenreInputEditText" />

    <Button
        android:id="@+id/goToWatchListButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_watch_list_activity"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:background="@drawable/activitymain_addmoviebutton_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addMovieButton" />

    <Button
        android:id="@+id/viewCompletedMoviesButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_completed_list_activity"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:background="@drawable/activitymain_addmoviebutton_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goToWatchListButton" />

</androidx.constraintlayout.widget.ConstraintLayout>
